<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/li_home_default_view"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="300dp"
        android:layout_marginTop="-50dp"
        android:id="@+id/img_home_default_view"
        android:src="@drawable/img_cleaning"
        android:layout_height="350dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lbl_info_home_default_view"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000"
        android:textSize="7pt"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="#006FFF"
        android:textColor="#fff"
        android:id="@+id/btn_clean_home_default_view"
        android:layout_marginTop="20dp"
        android:text="Clean my phone"/>

</LinearLayout>
