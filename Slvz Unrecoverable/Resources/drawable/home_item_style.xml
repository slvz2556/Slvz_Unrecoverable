<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- Drop Shadow Stack -->
	<item>
		<shape>
			<corners android:radius="15dp" />
			<padding android:bottom="3dp" android:left="3dp"
					 android:right="3dp"  android:top="3dp" />
			<solid android:color="#F9F9F9" />
		</shape>
	</item>
	<item>
		<shape>
			<corners android:radius="15dp" />
			<padding android:bottom="2dp" android:left="2dp"
					 android:right="2dp"  android:top="2dp" />
			<solid android:color="#F4F4F4" />
		</shape>
	</item>
	<item>
		<shape>
			<corners android:radius="15dp" />
			<padding android:bottom="1dp" android:left="1dp"
					 android:right="1dp"  android:top="1dp" />
			<solid android:color="#F2F2F2" />
		</shape>
	</item>
	<item>
		<shape>
			<corners android:radius="15dp" />
			<padding android:bottom="1dp" android:left="1dp"
					 android:right="1dp"  android:top="1dp" />
			<solid android:color="#F0F0F0" />
		</shape>
	</item>
	<item>
		<shape>
			<corners android:radius="15dp" />
			<padding android:bottom="1dp" android:left="1dp"
					 android:right="1dp"  android:top="1dp" />
			<solid android:color="#F7F7F7" />
		</shape>
	</item>

	<!-- Background -->
	<item>
		<shape>
			<solid android:color="#fff" />
			<corners android:radius="15dp" />
		</shape>
	</item>
</layer-list>
